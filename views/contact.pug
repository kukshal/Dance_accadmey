block scripts
  script(src='/static/index.js')


block style 
  style 
    include ../static/styleContact.css

block content 
   h1 contact us!
   form(action="/contact", method="post", class="myForm")
       input(type="text", class="myInput", name="name" placeholder="enter your name here!") 
       input(type="phone", class="myInput", name="phone" placeholder="enter your phone num here!") 
       input(type="email", class="myInput", name="email" placeholder="enter your email here!") 
       input(type="text", class="myInput", name="address" placeholder="enter your address here!") 
       input(type="text", class="myInput", name="desc" placeholder="enter your concern here!") 
       button(class="btn")
         |Submit










